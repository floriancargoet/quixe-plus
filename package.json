{
  "name": "quixeplus",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "lint": "eslint src/",
    "format": "prettier --write src/ scripts/*.js tests-resources/",
    "build": "mkdir build; rollup -c; cp build/QuixePlus.min.js templates/QuixePlus",
    "test": "jest --silent",
    "test-watch": "jest --silent --watch",
    "build-examples": "scripts/build-examples.sh"
  },
  "author": "Florian CargoÃ«t",
  "license": "ISC",
  "dependencies": {
    "xml2js": "0.4.23"
  },
  "devDependencies": {
    "@babel/core": "7.9.6",
    "@babel/plugin-proposal-class-properties": "7.8.3",
    "@babel/preset-env": "7.9.6",
    "@rollup/plugin-babel": "5.0.2",
    "babel-eslint": "10.1.0",
    "babel-jest": "26.0.1",
    "eslint": "7.1.0",
    "eslint-plugin-import": "2.20.2",
    "jest": "26.0.1",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "rollup": "2.10.9",
    "rollup-plugin-terser": "6.1.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-class-properties"
      ]
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "html"
    ],
    "setupFiles": [
      "./tests-resources/setup.js"
    ],
    "testEnvironment": "jsdom"
  }
}
